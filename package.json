{
    "name": "lexico",
    "version": "1.0.0",
    "description": "A parser generator",
    "main": "index.js",
    "scripts": {
        "test": "mocha -r ts-node/register src/**/*.spec.ts",
        "build": "tsc",
        "start": "node dist/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hamish-milne/lexico.js.git"
    },
    "keywords": [
        "parser"
    ],
    "author": "Hamish Milne",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hamish-milne/lexico.js/issues"
    },
    "homepage": "https://github.com/hamish-milne/lexico.js#readme",
    "devDependencies": {
        "@types/mocha": "^7.0.2",
        "@types/node": "^14.0.5",
        "@typescript-eslint/eslint-plugin": "^3.0.0",
        "@typescript-eslint/parser": "^3.0.0",
        "eslint": "^7.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "mocha": "^7.2.0",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.1",
        "typescript": "^3.9.3"
    },
    "dependencies": {},
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "rules": {
            "@typescript-eslint/no-explicit-any": "off",
            "space-before-function-paren": "off",
            "@typescript-eslint/no-non-null-assertion": "off",
            "@typescript-eslint/explicit-module-boundary-types": "off"
        }
    }

}